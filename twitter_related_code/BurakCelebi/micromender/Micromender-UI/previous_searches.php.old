$con = connect();
$result = mysql_query('SELECT ID, DATE, QUERY, STATUS FROM T_SEARCH ORDER BY ID DESC');
while($row = mysql_fetch_array($result)) {
	echo '<tr><td><a href=show_search.php?id=' . $row['ID'] . '>' . $row['QUERY'] . '</a></td><td>' . $row['DATE'] . '</td><td>'. decodeQueryStatus($row['STATUS']) .'</td></tr>';
}
closeCon($con);



function decodeQueryStatus($status) {
	$arr = array('0'=>'invalid', '1'=>'entry', '2'=>'processing', '3'=>'finished');
	return $arr[$status];
}

